@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Cesta.Localization
@using Volo.Abp.Users
@model Cesta.Web.Pages.IndexModel
@inject IHtmlLocalizer<CestaResource> L
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style src="/Pages/Index.css" />
    <abp-style src="/Pages/leaflet/leaflet.css" />
}
@section scripts {
    <abp-script src="/Pages/Index.js" />
    <abp-script src="/Pages/leaflet/leaflet.js" />
}
<div class="container">
    <div class="p-5 text-center">
       @*  <div class="d-inline-block bg-success text-white p-1 h5 rounded mb-4 " role="alert">
            <h5 class="m-1"> <i class="fas fa-rocket"></i><strong>Cesta</strong> is running!</h5>
        </div> *@
        <h1>@L["MensajeWelcome"]</h1>

        <p class="lead px-lg-5 mx-lg-5">@L["LongWelcomeMessage"]</p>

        @if (!CurrentUser.IsAuthenticated)
        {
            <a abp-button="Primary" href="~/Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>
        }

    </div>
    <div class="card">

        <!-- Id para el mapa interactivo -->
        <div id="map">

        </div>

       
    </div>
    

    
    <div class="mb-5 text-center">
        <p class="align-middle">
            <abp-button class="email-button" onclick="sendEmail()"><i class="bi bi-envelope"></i> Enviar Correo</abp-button>
            <a target="_blank" href="https://www.amazon.es/gp/help/customer/display.html?nodeId=201890250&ref_=footer_cookies_notice">
                @L["politicaCookies"]
            </a>
            <abp-button onclick="showWarningAlert('Warning')">Warning</abp-button>
            <abp-button onclick="showErrorAlert('Error')">Error</abp-button>
            <abp-button onclick="showSuccessAlert('Success')">Warning</abp-button>
            <abp-button onclick="showLoadingAlert('Por favor, espere...', 5000)">Loading</abp-button>
        </p>
    </div>
</div>
